{
  "manifest_version": 2,
  "version": "2.0.0",
  "name": "__MSG_extensionName__",
  "short_name": "__MSG_extensionShortName__",
  "description": "__MSG_extensionDescription__",
  "author": "Joel Purra",
  "homepage_url": "https://github.com/joelpurra/talkie",
  "background": {
    "scripts": [
      "src/shared.js",
      "src/language.js",
      "src/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+A",
        "mac": "Command+Shift+A",
        "chromeos": "Ctrl+Shift+A",
        "linux": "Ctrl+Shift+A"
      },
      "description": "__MSG_commandBrowserActionDescription__"
    },
    "start-stop": {
      "suggested_key": {
        "windows": "Alt+Shift+A",
        "mac": "Alt+Shift+A",
        "chromeos": "Alt+Shift+A",
        "linux": "Alt+Shift+A"
      },
      "description": "__MSG_commandStartStopDescription__"
    },
    "open-website-main": {
      "description": "__MSG_commandOpenWebsiteMainDescription__"
    },
    "open-website-chromewebstore": {
      "description": "__MSG_commandOpenWebsiteChromeWebStoreDescription__"
    },
    "open-website-donate": {
      "description": "__MSG_commandOpenWebsiteDonateDescription__"
    }
  },
  "options_ui": {
    "page": "src/options.html",
    "chrome_style": true
  },
  "requirements": {},
  "offline_enabled": true,
  "default_locale": "en",
  "browser_action": {
    "default_title": "__MSG_buttonDefaultTitle__",
    "default_icon": {
      "16": "resources/icon/icon-play/icon-16x16.png",
      "32": "resources/icon/icon-play/icon-32x32.png",
      "48": "resources/icon/icon-play/icon-48x48.png",
      "64": "resources/icon/icon-play/icon-64x64.png",
      "128": "resources/icon/icon-play/icon-128x128.png",
      "256": "resources/icon/icon-play/icon-256x256.png",
      "512": "resources/icon/icon-play/icon-512x512.png",
      "1024": "resources/icon/icon-play/icon-1024x1024.png"
    }
  },
  "icons": {
    "16": "resources/icon/icon-play/icon-16x16.png",
    "32": "resources/icon/icon-play/icon-32x32.png",
    "48": "resources/icon/icon-play/icon-48x48.png",
    "64": "resources/icon/icon-play/icon-64x64.png",
    "128": "resources/icon/icon-play/icon-128x128.png",
    "256": "resources/icon/icon-play/icon-256x256.png",
    "512": "resources/icon/icon-play/icon-512x512.png",
    "1024": "resources/icon/icon-play/icon-1024x1024.png"
  }
}
